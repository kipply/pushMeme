            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') people
            | Groups
          a.mdl-navigation__link(href='')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') forum
            | Messages
          a.mdl-navigation__link(href='/logout')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') flag
            | Log Out
          .mdl-layout-spacer
          a.mdl-navigation__link(href='')
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') help_outline
            span.visuallyhidden Help
      main.mdl-layout__content.mdl-color--grey-100
        .hover1
          nav.container1
            a.buttons(href='#', tooltip='New Message')
            a.buttons(href='/new-group-goal', tooltip='Add Group Goal')
            a.buttons(href='/creategroup', tooltip='New Group')
              i.fa.fa-user-circle-o(aria-hidden='true')
            a.buttons(tooltip='New Goal', href='/new-goal')
        style.
          .mdl-layout__content{
            padding: 10px;
          }
          .demo-card-wide.mdl-card {
          position: relative;
          padding: 5px;
          margin: 30px;
          width: 95%;
          }
          .demo-card-wide > .mdl-card__menu {
            display: none;
          }
          .mdl-card__title{
            color: darkgrey!important;
          }
          .mdl-button--red{
          color: #F44336;
          }

        form(action='/create-new-goal', method='post')
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input#sample3.mdl-textfield__input(type='text', name='goalName')

              label.mdl-textfield__label(for='sample3') Goal
            .group(id="task")

              .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                input.mdl-textfield__input(type='text', name='taskName', required)
                label.mdl-textfield__label(for='sample3') Task

              .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                input.date-format.mdl-textfield__input(type='text', name='dueDate', placeholder="Due Date", required)
                label.mdl-textfield__label Add Date

                label Difficulty
                select(name='difficulty', required)
                  option(value='1') Very Easy
                  option(value='2') Easy
                  option(value='3') Normal
                  option(value='4') Hard
                  option(value='5') Very Hard
              a#add_more.mdl-button.mdl-js-button Add Task

            button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent(type='submit') Create goal
            script(type='text/javascript').
              $(document).ready(function()
              {
              $('#date').bootstrapMaterialDatePicker
              ({
              time: false,
              clearButton: true
              });
              $('#time').bootstrapMaterialDatePicker
              ({
              date: false,
              shortTime: false,
              format: 'HH:mm'
              });
              $('.date-format').bootstrapMaterialDatePicker
              ({
              format: 'dddd DD MMMM YYYY - HH:mm'
              });
              $('#date-fr').bootstrapMaterialDatePicker
              ({
              format: 'DD/MM/YYYY HH:mm',
              lang: 'fr',
              weekStart: 1,
              cancelText : 'ANNULER',
              nowButton : true,
              switchOnClick : true
              });
              $('#date-end').bootstrapMaterialDatePicker
              ({
              weekStart: 0, format: 'DD/MM/YYYY HH:mm'
              });
              $('#date-start').bootstrapMaterialDatePicker
              ({
              weekStart: 0, format: 'DD/MM/YYYY HH:mm', shortTime : true
              }).on('change', function(e, date)
              {
              $('#date-end').bootstrapMaterialDatePicker('setMinDate', date);
              });
              $('#min-date').bootstrapMaterialDatePicker({ format : 'DD/MM/YYYY HH:mm', minDate : new Date() });
              $.material.init()
              });
            script.
              $('#add_more').click(function () {

              $(this).before($("#task").clone());
              });